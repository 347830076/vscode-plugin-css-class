{
	"name": "css-code-block",
	"displayName": "Css Code Block",
	"keywords": ["css", "css code", "css code block", "css3", "sass", "scss"],
	"description": "常用css代码段大全",
	"version": "0.0.3",
	"engines": {
		"vscode": "^1.63.0"
	},
	"publisher": "aliwang",
	"categories": [
		"Other"
	],
	"icon": "images/logo.png",
	"repository": {
        "type": "git",
        "url": "https://github.com/347830076/vscode-plugin-css-class"
    },
	"activationEvents": [
		"onCommand:class-menu"
	],
	"main": "./extension/index.js",
	"contributes": {
		"menus": {
			"editor/context": [
				{
					"when": "editorFocus",
					"command": "class-menu",
                    "group": "navigation"
				}
			]
		},
		"commands": [
			{
                "command": "class-menu",
                "title": "css常用代码大全"
            }
		],
        "keybindings": [
            {
                "command": "class-menu",
                "key": "shift+c",
                "mac": "shift+c",
                "when": "editorTextFocus"
            }
        ]
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.63.0",
		"@types/glob": "^7.1.4",
		"@types/mocha": "^9.0.0",
		"@types/node": "14.x",
		"eslint": "^8.1.0",
		"glob": "^7.1.7",
		"mocha": "^9.1.3",
		"typescript": "^4.4.4",
		"@vscode/test-electron": "^1.6.2"
	}
}